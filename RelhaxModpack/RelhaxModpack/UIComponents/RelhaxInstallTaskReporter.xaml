             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelhaxModpack.UIComponents"
             mc:Ignorable="d" d:DesignWidth="300" Height="114.667">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Task Name" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Stretch" Height="60" Margin="0,21,0,0" TextWrapping="Wrap" Text="Status information" VerticalAlignment="Top" />
            <ProgressBar HorizontalAlignment="Stretch" Height="10" Margin="0,86,0,0" VerticalAlignment="Top" />
            <ProgressBar HorizontalAlignment="Stretch" Height="10" Margin="0,101,0,0" VerticalAlignment="Top" />

        </Grid>
    </Border>
</UserControl>
