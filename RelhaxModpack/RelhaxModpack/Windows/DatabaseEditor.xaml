<Window x:Class="RelhaxModpack.Windows.DatabaseEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="DatabaseEditor" Height="700" Width="1000" MinHeight="480" MinWidth="640" Icon="/RelhaxModpack;component/Resources/modpack_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="632*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="10,0,0,10" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Width="75" Height="20"/>
        <Button Content="Move" HorizontalAlignment="Left" Margin="90,0,0,10" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Width="75" Height="20"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="170,0,0,10" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Width="75" Height="20"/>
        <Button Content="Copy To..." HorizontalAlignment="Left" Margin="250,0,0,10" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Width="75" Height="20"/>
        <Button Content="Load Database" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="2" Margin="0,0,100,10"  VerticalAlignment="Bottom" Width="85" Height="20"/>
        <Button Content="Save Database" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="2" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="85" Height="20"/>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="250"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"/>
            <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TabItem Header="Global Dependencies">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Dependencies">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Logical Dependencies">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Database Objects">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
            <Grid Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ComboBox Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEditable="True" />
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" Text="Name" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="2" TextWrapping="Wrap" Text="Package Name" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="3" TextWrapping="Wrap" Text="Start Address" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="4" TextWrapping="Wrap" Text="Zip File" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="5" TextWrapping="Wrap" Text="End Address" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="6" TextWrapping="Wrap" Text="Dev URL" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="7" TextWrapping="Wrap" Text="Version" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="8" TextWrapping="Wrap" Text="Type" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="9" TextWrapping="Wrap" Text="Level:" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Row="10" TextWrapping="Wrap" Text="Last Updated:" VerticalAlignment="Center"/>
                <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="5" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="6" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBox HorizontalAlignment="Stretch" Grid.Row="7" Grid.Column="1"  TextWrapping="Wrap" VerticalAlignment="Center" />
                <ComboBox HorizontalAlignment="Stretch" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Grid.Row="9" HorizontalAlignment="Left"  VerticalAlignment="Stretch" Content="Download Zip"/>
                <TextBlock HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="10" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
                <StackPanel Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                    <CheckBox Content="Log At Install"/>
                    <CheckBox Content="Append Extraction" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                    <CheckBox Content="Visable"/>
                    <CheckBox Content="Enabled" Margin="41,0,0,0"/>
                </StackPanel>
                <TabControl Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Grid.Row="14" VerticalAlignment="Stretch">
                    <TabItem Header="Description">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Update Notes">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Update Instructions">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Dependencies">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Logical Dependnecies">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Medias">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Userdatas">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
