<local:RelhaxWindow x:Class="RelhaxModpack.Windows.VersionInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="VersionInfo" Height="300" Width="500" MinHeight="300" MinWidth="500" Icon="/RelhaxModpack;component/Resources/modpack_icon.ico" Loaded="RelhaxWindow_Loaded"
        LocalizeWindow="True" ApplyToolTips="False" ApplyColorSettings="False" ApplyScaling="False">
    <Grid Tag="VersionInfoGrid">
        <TextBlock x:Name="NewVersionAvailable" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="New Version Available" VerticalAlignment="Top" Tag="NewVersionAvailable"/>
        <TextBox x:Name="ApplicationUpdateNotes" HorizontalAlignment="Right" Height="182" Margin="0,0,10,56" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="472" Tag="ApplicationUpdateNotes"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="If you are having problems updating, please" VerticalAlignment="Bottom" Tag="HavingProblemsTextBlock"/>
        <TextBlock HorizontalAlignment="Left" Margin="247,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom">
            <Hyperlink Tag="ManualUpdateLink" x:Name="ManualUpdateLink" NavigateUri="https://github.com/Willster419/RelhaxModpack/releases/latest" RequestNavigate="OnHyperlinkClick">Click Here</Hyperlink>
        </TextBlock>
        <Button x:Name="NoButton" Content="No" HorizontalAlignment="Left" Margin="10,0,0,31" VerticalAlignment="Bottom" Width="75" Tag="NoButton" Click="OnNoButtonClick"/>
        <Button x:Name="YesButton" Content="Yes" HorizontalAlignment="Right" Margin="0,0,10,31" VerticalAlignment="Bottom" Width="75" Tag="YesButton" Click="OnYesButtonClick"/>
    </Grid>
</local:RelhaxWindow>
