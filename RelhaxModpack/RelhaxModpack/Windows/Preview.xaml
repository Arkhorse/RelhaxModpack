<local:RelhaxWindow x:Class="RelhaxModpack.Windows.Preview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="Preview" Height="550" Width="450" Icon="/RelhaxModpack;component/Resources/modpack_icon.ico" Loaded="OnPreviewWindowLoad" Closed="RelhaxWindow_Closed">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition MinHeight="50" Height="*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border x:Name="MainPreviewBorder" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="Black"/>
            <Button Content="Next" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
            <Button Content="Previous" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Height="20" Margin="90,5,90,0" Grid.Row="1" VerticalAlignment="Top" >
                <StackPanel Orientation="Horizontal" x:Name="MediaIndexer"/>
            </Border>
        </Grid>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="5"/>
        <Border Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="Black">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="3" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="DevUrlBlock" Grid.Row="4" Margin="0,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="131" TextAlignment="Right">
                    <Hyperlink x:Name="DevUrlLink">Developer Website</Hyperlink>
                </TextBlock>
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" MinHeight="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*" MinHeight="20"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="PreviewDescriptionBox" Tag="PreviewDescriptionBox" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True"/>
                    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="5"/>
                    <TextBox x:Name="PreviewUpdatesBox" Tag="PreviewUpdatesBox" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</local:RelhaxWindow>
