<Window x:Class="RelhaxWPFConvert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxWPFConvert"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" MouseRightButtonUp="ScrollViewer_MouseRightButtonUp">
    <Grid Background="#FF0C0CE6" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <StackPanel>
                <CheckBox Content="CheckBox"/>
                <CheckBox Content="CheckBox"/>
                <Border BorderBrush="Black" BorderThickness="2" Height="300" Padding="13,0,0,0">
                    <StackPanel>
                        <CheckBox Content="CheckBox"/>
                        <CheckBox Content="CheckBox" HorizontalAlignment="Left"/>
                        <ContentControl HorizontalAlignment="Left" MouseRightButtonUp="ContentControl_MouseRightButtonUp">
                            <CheckBox Content="CheckBox" Foreground="BlanchedAlmond" HorizontalAlignment="Left" IsEnabled="False" MouseDown="CheckBox_MouseDown" PreviewMouseRightButtonDown="CheckBox_PreviewMouseRightButtonDown"/>
                        </ContentControl>
                            <ComboBox MaxWidth="200" HorizontalAlignment="Left" MinWidth="100"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</Window>
